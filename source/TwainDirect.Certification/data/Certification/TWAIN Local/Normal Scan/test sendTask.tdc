;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Test sendTask
; Exercise the sendTask command.  We're going to do the following:
; - confirm that sendTask succeeds, and contains all required properties
;
; Arguments
; arg:1 - test task (optional)
;
; Locals
; sendtaskresult - result of the test
;
; returns: pass or fail
;



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Display the banner...
;
echo
echo 'Test sendTask v1.0 17-Jul-2017'
set sendtaskresult 'pass'



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Call sendTask, and check the return properties...
;
call SENDTASK



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Bye-bye...
;
echopassfail 'SUMMARY' '${get:sendtaskresult}'
return '${get:sendtaskresult}'



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; SENDTASK
; returns pass or fail
;
:SENDTASK
;
; Send the command...
sendTask '{"actions":[{"action":"configure","streams":[{"sources":[{"source":"any","pixelFormats":[{"pixelFormat":"any"}]}]}]}]}'
;
; Check the headers...
run 'function CheckHeader' 'sendtaskresult' 'Content-Type' ~contains 'application/json' 'charset=utf-8'
run 'function CheckHeader' 'sendtaskresult' 'Content-Length' == '${rdata:#}'
;
; Check the mandatory properties...
run 'function CheckJsonProperty' 'sendtaskresult' 'kind' == 'twainlocalscanner'
run 'function CheckJsonProperty' 'sendtaskresult' 'commandId'
run 'function CheckJsonProperty' 'sendtaskresult' 'method' == 'sendTask'
run 'function CheckJsonProperty' 'sendtaskresult' 'results'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.success' == 'true'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.sessionId' != ''
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.revision' != ''
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.state' == 'ready'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0]'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].action' '==' 'configure'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].results'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].results.success' '==' 'true'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0]'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0].name' '==' 'stream0'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0]'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].source' '==' 'any'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].name' '==' 'source0'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].pixelFormats'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].pixelFormats[0]'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].pixelFormats[0].pixelFormat' '==' 'any'
run 'function CheckJsonProperty' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].pixelFormats[0].name' '==' 'pixelFormat0'
if '${get:sendtaskresult}' != 'pass' goto SENDTASK.FAIL
;
; We're good...
echopassfail 'sendTask call' 'pass'
return 'pass'
;
:SENDTASK.FAIL
set sendtaskresult 'fail'
echopassfail 'sendTask call' 'fail'
return 'fail'
