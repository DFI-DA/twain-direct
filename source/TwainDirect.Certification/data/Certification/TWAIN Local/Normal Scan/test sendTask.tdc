;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Test sendTask
; Exercise the sendTask command.  We're going to do the following:
; - confirm that sendTask succeeds, and contains all required properties
;
; Arguments
; arg:1 - test task (optional)
;
; Locals
; sendtaskresult - result of the test
;
; returns: pass or fail
;



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Display the banner...
;
echo
echo 'Test sendTask v1.0 17-Jul-2017'
set sendtaskresult 'pass'



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Call sendTask, and check the return properties...
;
call SENDTASK



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Bye-bye...
;
echopassfail 'SUMMARY' '${get:sendtaskresult}'
return '${get:sendtaskresult}'



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; SENDTASK
; returns pass or fail
;
:SENDTASK
;
; Send the command...
sendTask '{"actions":[{"action":"configure","streams":[{"sources":[{"source":"any","pixelFormats":[{"pixelFormat":"any"}]}]}]}]}'
;
; Check the headers...
run 'function CheckHeader' 'TL.STSK.001' 'sendtaskresult' 'Content-Type' ~contains 'application/json' 'charset=utf-8'
run 'function CheckHeader' 'TL.STSK.002' 'sendtaskresult' 'Content-Length' == '${rdata:#}'
;
; Check the mandatory properties...
run 'function CheckJsonProperty' 'TL.STSK.003' 'sendtaskresult' 'kind' == 'twainlocalscanner'
run 'function CheckJsonProperty' 'TL.STSK.004' 'sendtaskresult' 'commandId'
run 'function CheckJsonProperty' 'TL.STSK.005' 'sendtaskresult' 'method' == 'sendTask'
run 'function CheckJsonProperty' 'TL.STSK.006' 'sendtaskresult' 'results'
run 'function CheckJsonProperty' 'TL.STSK.007' 'sendtaskresult' 'results.success' == 'true'
run 'function CheckJsonProperty' 'TL.STSK.008' 'sendtaskresult' 'results.session'
run 'function CheckJsonProperty' 'TL.STSK.009' 'sendtaskresult' 'results.session.sessionId' != ''
run 'function CheckJsonProperty' 'TL.STSK.010' 'sendtaskresult' 'results.session.revision' != ''
run 'function CheckJsonProperty' 'TL.STSK.011' 'sendtaskresult' 'results.session.state' == 'ready'
run 'function CheckJsonProperty' 'TL.STSK.012' 'sendtaskresult' 'results.session.task'
run 'function CheckJsonProperty' 'TL.STSK.013' 'sendtaskresult' 'results.session.task.actions[0]'
run 'function CheckJsonProperty' 'TL.STSK.014' 'sendtaskresult' 'results.session.task.actions[0].action' '==' 'configure'
run 'function CheckJsonProperty' 'TL.STSK.015' 'sendtaskresult' 'results.session.task.actions[0].results'
run 'function CheckJsonProperty' 'TL.STSK.016' 'sendtaskresult' 'results.session.task.actions[0].results.success' '==' 'true'
run 'function CheckJsonProperty' 'TL.STSK.017' 'sendtaskresult' 'results.session.task.actions[0].streams'
run 'function CheckJsonProperty' 'TL.STSK.018' 'sendtaskresult' 'results.session.task.actions[0].streams[0]'
run 'function CheckJsonProperty' 'TL.STSK.019' 'sendtaskresult' 'results.session.task.actions[0].streams[0].name' '==' 'stream0'
run 'function CheckJsonProperty' 'TL.STSK.020' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources'
run 'function CheckJsonProperty' 'TL.STSK.021' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0]'
run 'function CheckJsonProperty' 'TL.STSK.022' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].source' '==' 'any'
run 'function CheckJsonProperty' 'TL.STSK.023' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].name' '==' 'source0'
run 'function CheckJsonProperty' 'TL.STSK.024' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].pixelFormats'
run 'function CheckJsonProperty' 'TL.STSK.025' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].pixelFormats[0]'
run 'function CheckJsonProperty' 'TL.STSK.026' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].pixelFormats[0].pixelFormat' '==' 'any'
run 'function CheckJsonProperty' 'TL.STSK.027' 'sendtaskresult' 'results.session.task.actions[0].streams[0].sources[0].pixelFormats[0].name' '==' 'pixelFormat0'
return '${get:sendtaskresult}'
