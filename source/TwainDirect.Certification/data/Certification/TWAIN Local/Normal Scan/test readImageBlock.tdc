;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Test readImageBlock
; Exercise the readImageBlock command.  We're going to do the following:
; - confirm that readImageBlock succeeds, and contains all required properties
;
; Arguments
; arg:1 - image block to read
; arg:2 - metadata flag (true/false)
; arg:3 - expected state
;
; Locals
; readimageblockresult - result of the test
;
; returns: pass or fail
;



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Display the banner...
;
echo
echo 'Test readImageBlock v1.0 17-Jul-2017'
set readimageblockresult 'pass'



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Call readImageBlock, and check the return properties...
;
call READIMAGEBLOCK '${arg:1}' '${arg:2}' '${arg:3}'



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Bye-bye...
;
echopassfail 'SUMMARY' '${get:readimageblockresult}'
return '${get:readimageblockresult}'



;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; READIMAGEBLOCK
; arg:1 - image block to read
; arg:2 - metadata flag (true/false)
; arg:3 - expected state
; returns pass or fail
;
:READIMAGEBLOCK
;
; Send the command...
readImageBlock '${arg:1}' '${arg:2}'
;
; Check the headers...
run 'function CheckHeader' 'readimageblockresult' 'Content-Type' ~contains 'multipart/mixed' 'boundary='
run 'function CheckHeader' 'readimageblockresult' 'Content-Length' == '${rdata:#}'

call CHECKHEADER 'Content-Type' 'multipart/mixed'
call CHECKHEADER 'Content-Length' '${rdata:#}'
;
; Check the mandatory properties...
run 'function CheckJsonProperty' 'readimageblockresult' 'kind' == 'twainlocalscanner'
run 'function CheckJsonProperty' 'readimageblockresult' 'commandId'
run 'function CheckJsonProperty' 'readimageblockresult' 'method' == 'readImageBlock'
run 'function CheckJsonProperty' 'readimageblockresult' 'results'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.success' == 'true'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.session'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.session.sessionId' != ''
run 'function CheckJsonProperty' 'readimageblockresult' 'results.session.revision' != ''
run 'function CheckJsonProperty' 'readimageblockresult' 'results.session.state' == '${arg:3}'
;
; If we didn't ask for metadata, there'd better not be any...
if '${arg:2}' == 'true' goto READIMAGEBLOCK.CHECKMETADATA
if '${rj:results.metadata}' != '' goto READIMAGEBLOCK.FAIL
goto READIMAGEBLOCK.PASS
;
; We asked for metadata, so check it out...
:READIMAGEBLOCK.CHECKMETADATA
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.status'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.status.success' == 'true'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address'
if '${arg:1}' > '1' goto READIMAGEBLOCK.CHECKOTHERIMAGEBLOCKS
	run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.imageNumber' '==' '1'
	run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.imagePart' '==' '1'
	run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.sheetNumber' '==' '1'
	goto READIMAGEBLOCK.SKIPOTHERIMAGEBLOCKS
:READIMAGEBLOCK.CHECKOTHERIMAGEBLOCKS
	run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.imageNumber' '!=' ''
	run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.imagePart' '!=' ''
	run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.sheetNumber' '!=' ''
:READIMAGEBLOCK.SKIPOTHERIMAGEBLOCKS
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.moreParts' '==' 'false' 'true'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.source' '==' 'flatbed' 'feederFront' 'feederRear'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.streamName' '==' 'stream0'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.sourceName' '==' 'source0'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.address.pixelFormatName' '==' 'pixelFormat0'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.image'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.image.compression' == 'none' 'group4' 'jpeg'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.image.pixelFormat' == 'bw1' 'gray8' 'rgb24'
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.image.pixelHeight' != ''
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.image.pixelOffsetX' != ''
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.image.pixelOffsetY' != ''
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.image.pixelWidth' != ''
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.image.resolution' != ''
run 'function CheckJsonProperty' 'readimageblockresult' 'results.metadata.image.size' != ''
if '${get:readimageblockresult}' != 'pass' goto READIMAGEBLOCK.FAIL
;
; We're good...
:READIMAGEBLOCK.PASS
echopassfail 'readImageBlock call' 'pass'
return 'pass'
;
:READIMAGEBLOCK.FAIL
set readimageblockresult 'fail'
echopassfail 'readImageBlock call' 'fail'
return 'fail'
